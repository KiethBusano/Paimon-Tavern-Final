<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutreceipt"
    android:background="#176b87"
    tools:context=".tavernreceipt">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/tavernbg6">



        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="135dp"
            android:background="@drawable/tavernbg1"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="0dp"
                android:src="@drawable/tavern_logo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paimon\'s Tavern"
                android:fontFamily="sans-serif-black"
                android:textColor="#176b87"
                android:textSize="24dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="30dp" />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/tavernbg4"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/backtologin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Again"
                android:textAlignment="center"
                android:fontFamily="sans-serif-black"
                android:background="@drawable/tavernbg1"
                android:textColor="#176b87"
                android:textSize="24dp"
                android:clickable="true"
                android:onClick="backlogging"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="35dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:text="Your Receipt:"
                android:fontFamily="sans-serif-black"
                android:textColor="#176b87"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/receipt_ost"
                android:text="OST"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="175dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/get_allitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Items"
                android:textColor="#176b87"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/get_itemquantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/proceed_up"
                android:clickable="true"
                android:padding="@dimen/_5sdp"
                android:text=" Qnt "
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>